
<!DOCTYPE html>
<html lang="en">
<head>
	
	@{ViewData["Title"] = "Login";}
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!--===============================================================================================-->

	<link rel="stylesheet" type="text/css" href="css/util.css">
	<link rel="stylesheet" type="text/css" href="css/main.css">
	<!--===============================================================================================-->
</head>
<body>

    
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100 p-t-85 p-b-20">
                    <form class="login100-form validate-form" method="post" asp-action="Index">
                        <!--<span class="login100-form-title p-b-70">
        Mensajes Relevantes S.A.
    </span>-->
                        <span class="login100-form-avatar">
                            <img src="images/WebChat.PNG" alt="AVATAR">
                        </span>

                        <br>
                        <hr class="hr-count">
                        <p class="p-acout">Iniciar sesión aquí</p>

                        <hr class="hr-count">
                        <br>

                        <div class="wrap-input100 validate-input m-t-85 m-b-35" data-validate="Enter username">
                            <input class="input100" type="text" name="username" placeholder="Usuario">
                        </div>

                        <div class="wrap-input100 validate-input m-b-50" data-validate="Enter password">
                            <input class="input100" type="password" name="pass" placeholder="Contraseña">
                        </div>
                        @if (ViewBag.error == true)
                        {
                            <font style="color:red">Usuario o contraseña incorrecta, por favor verifica bien tus datos e intenta nuevamente</font>

                        }
                        <br />
                        <div class="container-login100-form-btn">
                            <button type="submit" class="login100-form-btn">
                                Iniciar Sesión
                            </button>
                        </div>
                    </form>
                        <ul class="login-more p-t-190">
                            <li>
                                <span class="txt1">
                                    ¿No tienes una cuenta?
                                </span>

                                <a asp-controller="Accout" class="txt2">
                                    Registrarse
                                </a>
                            </li>
                        </ul>
                   
                </div>
            </div>
        </div>




</body>
</html>